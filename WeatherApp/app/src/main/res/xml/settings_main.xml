<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/settings_title">

    <EditTextPreference
        android:inputType="text"
        android:singleLine="true"
        android:key="@string/settings_location_key"
        android:title="@string/settings_location_label"/>

    <EditTextPreference
        android:defaultValue="@string/settings_number_of_days_default"
        android:inputType="numberDecimal"
        android:key="@string/settings_number_of_days_key"
        android:selectAllOnFocus="true"
        android:title="@string/settings_number_of_days_label" />

</PreferenceScreen>